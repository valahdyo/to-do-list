<%- include("header") %>
    <div class="box" id="heading">
        <h1>
            <%=listTitle%>
        </h1>
    </div>

    <div class="box">

        <% listItems.forEach(function(list){ %>
            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= list._id %>" onChange="this.form.submit()" />
                <p>
                    <%=list.name%>
                </p>
            </div>
            <input type="hidden" name="itemName" value="<%= listTitle %>">
            </form>
            <% }) %>


                <form class="item" action="/" method="post">
                    <input type="text" name="newItem" placeholder="To do" autocomplete="off" />
                    <button type="submit" name="newList" value="<%= listTitle %>">+</button>
                </form>
    </div>
    <%- include("footer") %>